@import 'colors';

body
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	padding 0
	margin 0
	font-size 14px
	line-height 1.5em
canvas
	position fixed
	top 0
	bottom 0
	left: 0
	right 0
	width 100%
	height 100%
	padding 0
	margin 0
.drop
	position absolute
	top: 0
	left 0
	bottom 0
	right 0
	padding 0
	margin 0
	z-index 999
h1
	position fixed
	top 10px
	left 10px
	margin 0
	padding 0
	font-size 1.5em
	font-family: 'Roboto', sans-serif
	font-weight: normal
	color #FFF
	z-index 9999
	text-transform: uppercase
